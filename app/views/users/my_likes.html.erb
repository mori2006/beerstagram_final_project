<div class="page-header">
  <h3><%= @user.username %>'s likes</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td><a href="/beers/<%= like.beer.id %>"><%= like.beer.name %></a></td>
        <td><a href="/beers/<%= like.beer.id %>">
          <img src="<%= like.beer.image %>" class="img-responsive" >
        </a></td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
