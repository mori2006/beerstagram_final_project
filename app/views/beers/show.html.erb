<div class="page-header">
  <h3><%= @beer.name %> by <a href="/breweries/<%= @beer.brewery.id %>"> <%= @beer.brewery.name %> </a></h3>
</div>

<% if current_user.id == @beer.user_id %>
<div class="row">
  <div class="col-md-12 mb-2">
    <dd><img src ="<%= @beer.image %>"</dd>
    <dl class="dl-horizontal">
      <!-- <dt>User</dt>
      <dd><%= @beer.user_id %></dd> -->


      <dt>Style</dt>
      <dd><%= @beer.style %></dd>

      <dt>Description</dt>
      <dd><%= @beer.descrip %></dd>

      <dt>Abv</dt>
      <dd><%= @beer.abv %>%</dd>

      <!-- <dt>Db api beer</dt>
      <dd><%= @beer.db_api_beer_id %></dd> -->

      <dt>Avail</dt>
      <dd><%= @beer.avail %></dd>

      <dt>Rating</dt>
      <dd><%= @beer.rating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/beers" class="btn btn-primary">
        Back
      </a>
      <a href="/beers/<%= @beer.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_beer/<%= @beer.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<% else %>
<div class="row">
  <div class="col-md-12 mb-2">
    <dd><img src ="<%= @beer.image %>"</dd>
    <dl class="dl-horizontal">
      <!-- <dt>User</dt>
      <dd><%= @beer.user_id %></dd> -->


      <dt>Style</dt>
      <dd><%= @beer.style %></dd>

      <dt>Description</dt>
      <dd><%= @beer.descrip %></dd>

      <dt>Abv</dt>
      <dd><%= @beer.abv %>%</dd>

      <!-- <dt>Db api beer</dt>
      <dd><%= @beer.db_api_beer_id %></dd> -->

      <dt>Avail</dt>
      <dd><%= @beer.avail %></dd>

      <dt>Rating</dt>
      <dd><%= @beer.rating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/beers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
<% end %>
