<!-- Validation failure messages -->
<% if @brewery.errors.any? %>
  <% @brewery.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @brewery.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_brewery/<%= @brewery.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <textarea id="name" name="name" placeholder="Name" class="form-control" rows="3"><%= @brewery.name %></textarea>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @brewery.image %>">
      </div>

      <!-- Label and input for descrip -->
      <div class="form-group">
        <label for="descrip" class="control-label">
          Descrip
        </label>

        <input type="text" id="descrip" name="descrip" placeholder="Descrip" class="form-control" value="<%= @brewery.descrip %>">
      </div>

      <!-- Label and input for db_api_brewery_id -->
      <div class="form-group">
        <label for="db_api_brewery_id" class="control-label">
          Db api brewery
        </label>

        <input type="text" id="db_api_brewery_id" name="db_api_brewery_id" placeholder="Db api brewery" class="form-control" value="<%= @brewery.db_api_brewery_id %>">
      </div>


      <!-- Label and input for est -->
      <div class="form-group">
        <label for="est" class="control-label">
          Est
        </label>

        <input type="text" id="est" name="est" placeholder="Est" class="form-control" value="<%= @brewery.est %>">
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @brewery.website %>">
      </div>

      <button class="btn btn-warning">
        Update Brewery
      </button>
      or
      <a href="/breweries/<%= @brewery.id %>">Cancel</a>
    </form>
  </div>
</div>
