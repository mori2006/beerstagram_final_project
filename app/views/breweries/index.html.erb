<div class="page-header">
  <h1>
    Breweries
    <a href="/brewery/find_brewery" class="btn btn-lg btn-success">Search for New Brewery</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <!-- <th>Db api brewery</th> -->
        <th>Description</th>
        <th>Est</th>
        <th>Website</th>
        <th>Actions</th>
      </tr>

      <% @breweries.each do |brewery| %>
      <tr>
        <td><img src="<%= brewery.image %>"></td>
        <td><%= brewery.name %></td>
        <!-- <td><%= brewery.db_api_brewery_id %></td> -->
        <td><%= brewery.descrip %></td>
        <td><%= brewery.est %></td>
        <td><a href="<%= brewery.website %>"> <%= brewery.website %> </a></td>
        <td>
          <a href="/breweries/<%= brewery.id %>" class="btn btn-primary">Show</a>
          <a href="/breweries/<%= brewery.id %>/edit" class="btn btn-warning">Edit</a>
          <!-- <a href="/delete_brewery/<%= brewery.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
